<table>
  <thead>
    <tr>
      <th>image</th>
      <th>标题</th>
      <th>作者</th>
      <th>内容简介</th>
      <th>ISBN码</th>
      <th>操作</th>
      <th>借还</th>
      <th>状态</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= image_tag "http:\/\/img1.douban.com\/spic\/s1001902.jpg" %></td>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.description %></td>
        <td><%= book.ISBN %></td>
        <td><%= link_to "编辑", edit_book_path(book) %></td>
        <td><%= link_to "借还", check_in_path(book) %> </td>
        <td><%= if book.user
                  p "已借出"
                else
                  p "在馆"
                end%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>